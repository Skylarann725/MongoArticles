    <!-- Modal Structure -->
    <div id="commentsModal" class="modal">
        <div class="modal-content center-align">
            <h4>Notes for Article:</h4>
            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea id="textarea1" name="body" class="materialize-textarea"></textarea>
                            <label for="textarea1">Your Note Here</label>
                        </div>
                    </div>
                 </form>
            </div>
        </div>
        <div class="modal-footer">
            <a href="/saved" class="modal-action modal-close waves-effect waves-green btn-flat" id="savenote" data-id="{{this._id}}">Save Note</a>
        </div>
    </div>
    <!-- Paralax -->
        <div id="index-banner" class="parallax-container">
            <div class="section no-pad bot"
                <div class="container">
                    <br>
                    <br>
                    <h1>Live Science Articles!</h1>
                        <div class="row center">
                            <h4>Your Saved Articles</h4>
                        </div>
                </div>
            </div>
        </div>
        <div class="parallax"><img src="./assets/img/science3.jpg"></div>
    <!-- Article Boxes -->
    {{#each articles}}
    <div class="article-container">
        <ul class="collection with-header">            
            <div class="title-{{this._id}}" id="article_title">
                <li class="collection-header #e1f5fe light-blue lighten-5">
                 <form action="/saved" method="PUT" method="POST">
                    <div><h5>{{this.title}}<a class="waves-effect waves-light btn" id="delete_button" data-id="{{this._id}}">Delete from Saved</a><a class="waves-effect waves-light btn" id="notes_button" data-id="{{this._id}}">Article Notes</a></h5></div>
                </li>
                </form>
            </div>
            <div class="summary" id="article_summary">
                <li class="collection-item"><p><a href="http://www.livescience.com/{{this.link}}">{{this.content}}{{this.date}}</a></p></li>
            </div>            
    </div>
    {{/each}}

